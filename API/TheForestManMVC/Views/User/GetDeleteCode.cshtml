@{
    ViewData["Title"] = "GetDeleteCode";
}

<h1>GetDeleteCode</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="DeleteUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label ><b>Validation Code</b></label>
                <input type="text" placeholder='("Enter Code")' name="code" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit code" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="ResendCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.Label((string)ViewBag.ErrorUser)
                <input type="text" value="deletecode" name="type" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="ResendCode" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

