@model Models.Response.UserPostsCommentsInfo

@{
    ViewData["Title"] = "AboutUser";
}

<h1>AboutUser</h1>

<div>
    <h4>UserPostsCommentsInfo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
       <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Posts[0].Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Posts[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Posts[0].Body)
                </th>
            </tr>
           @foreach(var item in Model.Posts)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem =>item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.Body)
                </td>
                <td>
                    
                    
                    @Html.ActionLink($"{item.Comments.Count}","CommentsByPostId","Comment",new{
                    @id = @item.Id}, null);
                </td>
                <td>
                    <div>
                        @Html.ActionLink("Edit", "Edit","Home", new { @id = @item.Id,@body=@item.Body}) |
                        @Html.ActionLink("Delete", "Delete","Home", new { @id = @item.Id,@body= @item.Body })
                    </div>
                </td>
            </tr>  
    }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comments[0].Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments[0].Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments[0].Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments[0].Updated)
                </th>
            </tr>
            @for(int i=0;i<Model.Comments.Count;++i)
            {
                <tr>
                <td>
                    @Html.DisplayFor(model => model.Comments[i].Author)
                </td>
                   
                <td>
                    @Html.DisplayFor(model => model.Comments[i].Body)
                </td>
                <td> 
                    @Html.DisplayFor(model => model.Comments[i].Created)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Comments[i].Updated)
                </td>
                <td>
                <div>
                    @Html.ActionLink("Edit", "Edit","Comment", new { @id = Model.Comments[i].Id,@body= Model.Comments[i].Body,@userId=@Model.Id}) |
                    @Html.ActionLink("Delete", "Delete","Comment", new { @id = Model.Comments[i].Id,@body= Model.Comments[i].Body })
                    </div>
                </td> 
                </tr>

            }
        </table>
</div>

